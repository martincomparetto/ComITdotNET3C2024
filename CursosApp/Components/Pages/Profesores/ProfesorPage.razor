@if (EstamosModificando)
{
    <button type="button" class="btn btn-primary" @onclick="GuardarCambios">Guardar Cambios</button>
}
else
{
    <button type="button" class="btn btn-primary" @onclick="Agregar">Agregar profesor</button>
}
<br />

@if (MensajeError != "")
{
    <label style="background-color: red;">@MensajeError</label>
} *@

<button class="btn-primary" @onclick="NuevoProfesor">Nuevo</button>

<ProfesoresListado Datos="@ProfesoresList" MostrarBotones="true" ModificarEvent="Modificar" EliminarEvent="Eliminar">
</ProfesoresListado>

